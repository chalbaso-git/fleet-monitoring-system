# Development Environment Configuration
# This file overrides .env for development builds

# ASP.NET Core Backend Configuration
REACT_APP_API_BASE_URL=https://localhost:5001
REACT_APP_GEOLOCATION_SERVICE_URL=https://localhost:5001
REACT_APP_ROUTING_SERVICE_URL=https://localhost:5001  
REACT_APP_AUDIT_SERVICE_URL=https://localhost:5001

# SignalR WebSocket Configuration
REACT_APP_WEBSOCKET_URL=wss://localhost:5001/hubs/monitoring

# Development Settings
REACT_APP_ENV=development
REACT_APP_LOG_LEVEL=debug

# Development HTTPS Configuration
HTTPS=true
# Disable SSL verification warnings for development (self-signed certificates)
NODE_TLS_REJECT_UNAUTHORIZED=0

# GPS Configuration for Development
REACT_APP_GPS_UPDATE_INTERVAL=2000
REACT_APP_GPS_FAILURE_RATE=0.15
REACT_APP_GPS_DATA_TTL=300000

# Map Configuration - Bogot√°, Colombia
REACT_APP_MAP_DEFAULT_CENTER_LAT=4.570868
REACT_APP_MAP_DEFAULT_CENTER_LNG=-74.297333
REACT_APP_MAP_DEFAULT_ZOOM=10

# Circuit Breaker Configuration  
REACT_APP_CIRCUIT_BREAKER_THRESHOLD=3
REACT_APP_CIRCUIT_BREAKER_TIMEOUT=30000

# Browser Configuration
BROWSER=none
FAST_REFRESH=true
