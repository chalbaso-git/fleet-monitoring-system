# Production Environment Configuration
# This file is used for production builds

# Production Backend Configuration (UPDATE THESE URLS FOR PRODUCTION)
REACT_APP_API_BASE_URL=https://your-production-domain.com/api
REACT_APP_GEOLOCATION_SERVICE_URL=https://your-production-domain.com/api
REACT_APP_ROUTING_SERVICE_URL=https://your-production-domain.com/api
REACT_APP_AUDIT_SERVICE_URL=https://your-production-domain.com/api

# Production WebSocket Configuration
REACT_APP_WEBSOCKET_URL=wss://your-production-domain.com/hubs/monitoring

# Production Settings
REACT_APP_ENV=production
REACT_APP_LOG_LEVEL=warn

# GPS Configuration for Production
REACT_APP_GPS_UPDATE_INTERVAL=5000
REACT_APP_GPS_FAILURE_RATE=0.05
REACT_APP_GPS_DATA_TTL=600000

# Map Configuration
REACT_APP_MAP_DEFAULT_CENTER_LAT=4.570868
REACT_APP_MAP_DEFAULT_CENTER_LNG=-74.297333
REACT_APP_MAP_DEFAULT_ZOOM=10

# Circuit Breaker Configuration (More conservative for production)
REACT_APP_CIRCUIT_BREAKER_THRESHOLD=5
REACT_APP_CIRCUIT_BREAKER_TIMEOUT=60000

# Production Build Settings
GENERATE_SOURCEMAP=false
